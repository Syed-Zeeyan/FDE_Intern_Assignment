# Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database - PostgreSQL (Metadata DB)
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5432/sheets_sync_metadata

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# MySQL Target Database (for sync destination)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=test_database
MYSQL_USER=root
MYSQL_PASSWORD=mysql_dev_password

# Google Sheets API
# Path to service account JSON file (relative or absolute)
GOOGLE_SERVICE_ACCOUNT_JSON=./credentials/google-service-account.json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
